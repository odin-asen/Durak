<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-classpath-element ../../../../../../out/production/Durak?>

<?import com.github.odinasen.gui.components.IntegerTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxWidth="-Infinity" prefHeight="295.0" prefWidth="218.0"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
      fx:controller="com.github.odinasen.gui.client.ClientPanelController">
  <ToolBar>
    <Button fx:id="buttonConnectDisconnect" onAction="#connectDisconnect" />
  </ToolBar>
  <TitledPane collapsible="false" text="%title.login.name" VBox.vgrow="NEVER">
      <TextField fx:id="fieldLoginName" minHeight="-1.0" prefColumnCount="20" prefWidth="-1.0">
        <tooltip>
          <Tooltip text="%tooltip.client.login.name" />
        </tooltip>
      </TextField>
  </TitledPane>
  <TitledPane collapsible="false" text="%title.server.settings" VBox.vgrow="ALWAYS">
    <HBox fx:id="hBoxPassword" prefHeight="-1.0" prefWidth="-1.0" spacing="5.0">
      <Label text="%label.password" />
      <TextField fx:id="fieldPassword" minHeight="-1.0" prefColumnCount="20" prefWidth="-1.0" HBox.hgrow="ALWAYS">
        <tooltip>
          <Tooltip text="%tooltip.client.server.password" />
        </tooltip>
      </TextField>
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" fx:id="hBoxInsets"/>
      </padding>
    </HBox>
    <HBox fx:id="hBoxServerAddress" prefHeight="-1.0" prefWidth="-1.0" spacing="5.0" padding="$hBoxInsets">
      <Label text="%label.server.address" />
      <TextField fx:id="fieldServerAddress" minHeight="-1.0" prefColumnCount="20" prefWidth="-1.0" HBox.hgrow="ALWAYS">
        <tooltip>
          <Tooltip text="%tooltip.client.server.address" />
        </tooltip>
      </TextField>
    </HBox>
    <HBox fx:id="hBoxServerPort" prefHeight="-1.0" prefWidth="-1.0" spacing="5.0" padding="$hBoxInsets">
      <Label text="%label.port" />
      <IntegerTextField fx:id="fieldServerPort" minHeight="-1.0" prefColumnCount="20" prefWidth="-1.0" HBox.hgrow="ALWAYS">
        <tooltip>
          <Tooltip text="%tooltip.client.server.port" />
        </tooltip>
      </IntegerTextField>
    </HBox>
    <VBox.margin>
      <Insets />
    </VBox.margin>
  </TitledPane>
</VBox>
